rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para documentos colaborativos
    match /documents/{docId} {
      allow read, write: if true;
    }
    
    // Regras para presença de usuários
    match /presence/{docId}/users/{userId} {
      allow read, write: if true;
    }
    
    // Regras para pacientes
    match /patients/{patientId} {
      allow read, write: if true;
    }
    
    // Permitir todas as operações por enquanto (para desenvolvimento)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}

